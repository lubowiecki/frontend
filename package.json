{
	"name": "frontend",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"start:mock": "ng serve --configuration mock",
		"start:mock:e2e": "ng serve --configuration mockE2e --disable-host-check",
		"start:docs": "cross-env TAILWIND_INCLUDE_DOCS=true ng serve docs",
		"start:docs:e2e": "cross-env TAILWIND_INCLUDE_DOCS=true ng serve docs --disable-host-check",
		"build": "ng build",
		"build:prod": "ng build --configuration production",
		"lint:angular": "ng lint --fix",
		"lint:styles": "stylelint **/*.scss --fix -i=.gitignore",
		"test:unit": "ng test",
		"test:mock:e2e": "docker build -t lil/cypress/included:10.3.1 . && docker run -it --rm --add-host host.docker.internal:host-gateway -v \"%cd%\":/e2e lil/cypress/included:10.3.1 --config-file cypress.frontend.config.ts",
		"test:mock:e2e:compose": "docker build -t lil/cypress/included:10.3.1 . && docker compose up && docker compose rm -fsv",
		"test:docs:unit": "ng test docs",
		"test:docs:e2e": "docker build -t lil/cypress/included:10.3.1 . && docker run -it --rm --add-host host.docker.internal:host-gateway -v \"%cd%\":/e2e lil/cypress/included:10.3.1 --config-file cypress.docs.config.ts",
		"test:docs:e2e:compose": "docker build -t lil/cypress/included:10.3.1 . && docker compose -f cypress.docs.docker-compose.yml up && docker compose -f cypress.docs.docker-compose.yml rm -fsv",
		"analyze:bundle": "npm run build:prod -- --stats-json && npx webpack-bundle-analyzer dist/frontend/stats.json --port 4002",
		"translate:build": "translate build --source=\"./src/app/**/*+(.ts|.html)\" --i18n=./src/app/core/translation/i18n/ --langs=pl --langs=en",
		"dtos:build": "openapi b typescript --dist=./src/app/api/dtos"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^14.2.2",
		"@angular/cdk": "^14.2.2",
		"@angular/common": "^14.2.2",
		"@angular/compiler": "^14.2.2",
		"@angular/core": "^14.2.2",
		"@angular/forms": "^14.2.2",
		"@angular/material": "^14.2.2",
		"@angular/platform-browser": "^14.2.2",
		"@angular/platform-browser-dynamic": "^14.2.2",
		"@angular/router": "^14.2.2",
		"@opi_pib/node-translate": "^1.0.0",
		"@opi_pib/ts-utility": "^1.0.0",
		"@ngx-translate/core": "^14.0.0",
		"@ngx-translate/http-loader": "^7.0.0",
		"@opi_pib/stylelint-config-base": "^1.0.1",
		"luxon": "^3.0.3",
		"ramda": "^0.28.0",
		"rxjs": "~7.5.0",
		"socket.io-client": "^4.5.2",
		"tslib": "^2.3.0",
		"zod": "^3.19.1",
		"zone.js": "~0.11.4"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^14.2.3",
		"@angular-eslint/builder": "14.1.1",
		"@angular-eslint/eslint-plugin": "14.1.1",
		"@angular-eslint/eslint-plugin-template": "14.1.1",
		"@angular-eslint/schematics": "14.1.1",
		"@angular-eslint/template-parser": "14.1.1",
		"@angular/cli": "~14.2.3",
		"@angular/compiler-cli": "^14.2.2",
		"@cypress/schematic": "^2.1.1",
		"@opi_pib/eslint-config-base": "^1.0.0",
		"@opi_pib/eslint-plugin-assertions": "^1.0.0",
		"@opi_pib/ngx-schematics": "^14.0.0",
		"@opi_pib/node-openapi": "^1.0.1",
		"@opi_pib/stylelint-config-base": "^1.0.1",
		"@types/jasmine": "~4.0.0",
		"@types/luxon": "^3.0.1",
		"@types/node": "^18.7.18",
		"@types/ramda": "^0.28.15",
		"@typescript-eslint/eslint-plugin": "5.37.0",
		"@typescript-eslint/parser": "5.37.0",
		"axe-core": "^4.4.3",
		"cross-env": "^7.0.3",
		"cypress": "^10.8.0",
		"cypress-axe": "^1.0.0",
		"cypress-image-diff-js": "^1.21.1",
		"eslint": "^8.23.1",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-import": "^2.26.0",
		"jasmine-core": "~4.2.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.1.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.0.0",
		"prettier": "^2.7.1",
		"tailwindcss": "^3.1.8",
		"typescript": "~4.7.2"
	}
}
