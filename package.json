{
	"name": "frontend",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start:local": "ng serve",
		"start:mock": "ng serve --configuration mock",
		"start:prod": "ng serve --configuration production",
		"build:prod": "ng build:prod",
		"test:unit": "ng test",
		"test:e2e:mock": "cypress run -b firefox",
		"test:e2e:mock:debug": "npx cross-env CYPRESS_VISUAL_REGRESION_DISABLED=true cypress open",
		"lint:angular": "ng lint --fix",
		"lint:styles": "stylelint **/*.scss --fix -i=.gitignore",
		"analyze:bundle": "npm run build:prod -- --stats-json && npx webpack-bundle-analyzer dist/frontend/stats.json --port 4002",
		"translate:build": "translate build --source=\"./src/app/**/*+(.ts|.html)\" --i18n=./src/app/core/translation/i18n/ --langs=pl --langs=en",
		"dtos:build": "openapi b typescript --dist=./src/api/rest --typesOnly=false"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^15.2.0",
		"@angular/cdk": "^15.2.0",
		"@angular/common": "^15.2.0",
		"@angular/compiler": "^15.2.0",
		"@angular/core": "^15.2.0",
		"@angular/forms": "^15.2.0",
		"@angular/material": "^15.2.0",
		"@angular/material-luxon-adapter": "^15.2.0",
		"@angular/platform-browser": "^15.2.0",
		"@angular/platform-browser-dynamic": "^15.2.0",
		"@angular/router": "^15.2.0",
		"@ngx-translate/core": "^14.0.0",
		"@ngx-translate/http-loader": "^7.0.0",
		"@opi_pib/ngx-utility": "^15.1.4",
		"@opi_pib/node-translate": "^1.1.3",
		"@opi_pib/ts-utility": "^1.1.5",
		"luxon": "^3.2.1",
		"ramda": "^0.28.0",
		"rxjs": "~7.8.0",
		"socket.io-client": "^4.6.1",
		"tslib": "^2.3.0",
		"zod": "^3.21.0",
		"zone.js": "~0.12.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^15.2.0",
		"@angular-eslint/builder": "15.2.1",
		"@angular-eslint/eslint-plugin": "15.2.1",
		"@angular-eslint/eslint-plugin-template": "15.2.1",
		"@angular-eslint/schematics": "15.2.1",
		"@angular-eslint/template-parser": "15.2.1",
		"@angular/cli": "~15.2.0",
		"@angular/compiler-cli": "^15.2.0",
		"@opi_pib/eslint-config-base": "^1.0.7",
		"@opi_pib/eslint-plugin-assertions": "^1.0.8",
		"@opi_pib/ngx-schematics": "^15.1.1",
		"@opi_pib/node-openapi": "^1.0.11",
		"@opi_pib/stylelint-config-base": "^1.0.5",
		"@types/jasmine": "~4.3.0",
		"@types/luxon": "^3.2.0",
		"@types/ramda": "^0.28.23",
		"@typescript-eslint/eslint-plugin": "5.53.0",
		"@typescript-eslint/parser": "5.53.0",
		"autoprefixer": "^10.4.13",
		"axe-core": "^4.6.3",
		"cypress": "^12.6.0",
		"cypress-axe": "^1.3.0",
		"cypress-image-diff-js": "^1.23.0",
		"eslint": "^8.34.0",
		"eslint-plugin-cypress": "^2.12.1",
		"jasmine-core": "~4.5.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.1.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.0.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.3",
		"tailwindcss": "^3.2.7",
		"typescript": "~4.9.4"
	}
}
