{
	"name": "frontend",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"start:mock": "ng serve --configuration mock",
		"start:mock:e2e": "ng serve --configuration mockDocker --disable-host-check",
		"start:docs": "cross-env TAILWIND_INCLUDE_DOCS=true ng serve docs",
		"start:docs:e2e": "cross-env TAILWIND_INCLUDE_DOCS=true ng serve docs --disable-host-check",
		"build": "ng build",
		"build:prod": "ng build --configuration production",
		"lint:angular": "ng lint --fix",
		"lint:styles": "stylelint **/*.scss --fix -i=.gitignore",
		"test:unit": "ng test",
		"test:mock:e2e": "docker run -it --rm --add-host host.docker.internal:host-gateway -v \"%cd%\":/e2e -w /e2e cypress/included:9.5.2 cypress run --config-file cypress.frontend.json --browser chrome",
		"test:docs:unit": "ng test docs",
		"test:docs:e2e": "docker run -it --rm --add-host host.docker.internal:host-gateway -v \"%cd%\":/e2e -w /e2e cypress/included:9.5.2 cypress run --config-file cypress.docs.json --browser chrome",
		"analyze:bundle": "npm run build:prod -- --stats-json && npx webpack-bundle-analyzer dist/frontend/stats.json --port 4002",
		"translate:build": "translate build --source=\"./src/app/**/*+(.ts|.html)\" --i18n=./src/app/core/translation/i18n/ --langs=pl --langs=en",
		"dtos:build": "openapi b typescript --dist=./src/app/api/dtos"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "~13.2.6",
		"@angular/cdk": "^13.2.6",
		"@angular/common": "~13.2.6",
		"@angular/compiler": "~13.2.6",
		"@angular/core": "~13.2.6",
		"@angular/forms": "~13.2.6",
		"@angular/material": "^13.2.6",
		"@angular/platform-browser": "~13.2.6",
		"@angular/platform-browser-dynamic": "~13.2.6",
		"@angular/router": "~13.2.6",
		"@lubowiecki/node-translate": "^1.0.1",
		"@lubowiecki/ts-utility": "^1.0.1",
		"@ngx-translate/core": "^14.0.0",
		"@ngx-translate/http-loader": "^7.0.0",
		"luxon": "^2.3.1",
		"ramda": "^0.28.0",
		"rxjs": "~7.5.5",
		"socket.io-client": "^4.4.1",
		"tslib": "^2.3.1",
		"zone.js": "~0.11.4"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~13.2.6",
		"@angular-eslint/builder": "13.1.0",
		"@angular-eslint/eslint-plugin": "13.1.0",
		"@angular-eslint/eslint-plugin-template": "13.1.0",
		"@angular-eslint/schematics": "13.1.0",
		"@angular-eslint/template-parser": "13.1.0",
		"@angular/cli": "~13.2.6",
		"@angular/compiler-cli": "~13.2.6",
		"@cypress/schematic": "^1.6.0",
		"@lubowiecki/eslint-config-base": "^1.0.1",
		"@lubowiecki/eslint-plugin-assertions": "^1.0.1",
		"@lubowiecki/ngx-schematics": "^13.0.1",
		"@lubowiecki/node-openapi": "^1.0.1",
		"@lubowiecki/stylelint-config-base": "^1.0.1",
		"@types/cypress-image-snapshot": "^3.1.6",
		"@types/jasmine": "~3.10.3",
		"@types/luxon": "^2.3.0",
		"@types/node": "^17.0.21",
		"@types/ramda": "^0.28.1",
		"@typescript-eslint/eslint-plugin": "5.14.0",
		"@typescript-eslint/parser": "5.14.0",
		"cross-env": "^7.0.3",
		"cypress": "9.5.1",
		"cypress-image-snapshot": "^4.0.1",
		"eslint": "^8.10.0",
		"eslint-plugin-cypress": "^2.12.1",
		"eslint-plugin-import": "^2.25.4",
		"jasmine-core": "~3.8.0",
		"karma": "~6.3.0",
		"karma-chrome-launcher": "~3.1.0",
		"karma-coverage": "~2.0.3",
		"karma-jasmine": "~4.0.0",
		"karma-jasmine-html-reporter": "^1.7.0",
		"prettier": "^2.5.1",
		"tailwindcss": "^3.0.23",
		"typescript": "~4.5.5"
	}
}
