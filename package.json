{
	"name": "angular-frontend",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start:local": "ng serve",
		"start:mock": "ng serve --configuration mock",
		"start:prod": "ng serve --configuration production",
		"build:prod": "ng build --configuration production",
		"test:unit": "ng test",
		"test:e2e:mock": "playwright test",
		"lint": "prettier --ignore-path=.gitignore -c ./",
		"lint:scripts": "ng lint",
		"lint:styles": "stylelint **/*.scss --fix -i=.gitignore",
		"analyze:bundle": "npm run build:prod -- --stats-json && npx webpack-bundle-analyzer dist/angular-frontend/stats.json --port 4002",
		"translate:build": "translate build --source=\"./src/app/**/*+(.ts|.html)\" --i18n=./src/app/core/i18n/translations --langs=en-US --langs=pl-PL",
		"dtos:build": "openapi b typescript --dist=./src/api/rest --typesOnly=false"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^16.1.0",
		"@angular/cdk": "^16.1.1",
		"@angular/common": "^16.1.0",
		"@angular/compiler": "^16.1.0",
		"@angular/core": "^16.1.0",
		"@angular/forms": "^16.1.0",
		"@angular/material": "^16.1.1",
		"@angular/material-luxon-adapter": "^16.1.1",
		"@angular/platform-browser": "^16.1.0",
		"@angular/platform-browser-dynamic": "^16.1.0",
		"@angular/router": "^16.1.0",
		"@opi_pib/ngx-i18n": "16.0.0",
		"@opi_pib/ngx-utility": "16.0.0",
		"@opi_pib/node-translate": "1.2.1",
		"@opi_pib/ts-utility": "1.1.7",
		"luxon": "^3.3.0",
		"ramda": "^0.29.0",
		"rxjs": "~7.8.0",
		"socket.io-client": "^4.7.0",
		"tslib": "^2.3.0",
		"zod": "^3.21.4",
		"zone.js": "~0.13.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^16.1.0",
		"@angular-eslint/builder": "16.0.3",
		"@angular-eslint/eslint-plugin": "16.0.3",
		"@angular-eslint/eslint-plugin-template": "16.0.3",
		"@angular-eslint/schematics": "16.0.3",
		"@angular-eslint/template-parser": "16.0.3",
		"@angular/cli": "~16.1.0",
		"@angular/compiler-cli": "^16.1.0",
		"@axe-core/playwright": "^4.7.3",
		"@opi_pib/eslint-config-base": "^1.0.9",
		"@opi_pib/eslint-plugin-assertions": "1.0.10",
		"@opi_pib/ngx-schematics": "16.0.0",
		"@opi_pib/node-openapi": "1.0.13",
		"@opi_pib/stylelint-config-base": "^1.1.2",
		"@playwright/test": "^1.35.1",
		"@types/jasmine": "~4.3.0",
		"@types/luxon": "^3.3.0",
		"@types/ramda": "^0.29.2",
		"@typescript-eslint/eslint-plugin": "5.59.7",
		"@typescript-eslint/parser": "5.59.7",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"jasmine-core": "~4.6.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"tailwindcss": "^3.3.2",
		"typescript": "~5.1.3"
	}
}
